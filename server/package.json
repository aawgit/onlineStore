{
	"name": "nodejs-creating-restful-apis",
	"version": "1.0.0",
	"description": "",
	"main": "./build/server.js",
	"scripts": {
		"start": "nmp run prod",
		"build": "npm-run-all clean transpile",
		"server": "node ./build/server.js",
		"client": "npm run start --prefix ../client",
		"dev": "NODE_ENV=development npm-run-all build server",
		"prod": "NODE_ENV=production npm run build && node ./build/server.js",
		"watch:dev": "npm-run-all --parallel watch client",
		"watch": "nodemon",
		"test": "jest -- --watch",
		"cov": "jest -- --coverage",
		"transpile": "babel ./src --out-dir ./build",
		"clean": "rimraf ./build",
		"heroku-postbuild": "cd ../client && npm install --only=dev && npm install && npm run build"
	},
	"author": "",
	"license": "ISC",
	"dependencies": {
		"bcryptjs": "^2.4.3",
		"body-parser": "^1.18.2",
		"cors": "^2.8.5",
		"dotenv": "^7.0.0",
		"express": "^4.16.2",
		"jsonwebtoken": "^8.5.0",
		"mongoose": "^5.9.15",
		"nodemailer": "^5.1.1",
		"npm-run-all": "^4.1.5",
		"passport": "^0.4.0",
		"passport-facebook-token": "^3.3.0",
		"randomstring": "^1.1.5",
		"validator": "^11.0.0"
	},
	"devDependencies": {
		"@babel/cli": "^7.8.4",
		"@babel/core": "^7.9.6",
		"@babel/preset-env": "^7.9.6",
		"jest": "^26.0.1",
		"nodemon": "^2.0.4",
		"rimraf": "^3.0.2"
	},
	"babel": {
		"presets": [
			"@babel/preset-env"
		]
	},
	"nodemonConfig": {
		"exec": "npm run dev",
		"watch": "server/src/**/*",
		"ignore": [
			"**/__tests__/**",
			"*.test.js",
			"*.spec.js"
		]
	},
	"jest": {
		"testEnvironment": "node",
		"collectCoverageFrom": [
			"./src/**/*.{js,jsx,ts,tsx}"
		],
		"coverageReporters": [
			"text"
		]
	},
	"engines": {
		"node": "10.15.1"
	}
}
